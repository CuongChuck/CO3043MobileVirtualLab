<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1903F4E8"
    android:orientation="vertical"
    tools:context=".ChildActivity">

    <TextView
        android:id="@+id/title_view2"
        android:layout_width="414dp"
        android:layout_height="58dp"
        android:background="#0D47A1"
        android:fontFamily="sans-serif-medium"
        android:text="CHỌN CÁCH HIỂN THỊ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/findpic"
        android:layout_width="256dp"
        android:layout_height="54dp"
        android:layout_marginBottom="52dp"
        android:background="@drawable/filed_custom2"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="TÌM HÌNH ẢNH"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/title_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.911" />

    <TextView
        android:id="@+id/findpic2"
        android:layout_width="256dp"
        android:layout_height="54dp"
        android:background="@drawable/filed_custom2"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="TÌM MẶT PHẲNG"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/title_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.44" />

    <ImageButton
        android:id="@+id/backbtn_view2"
        android:layout_width="54dp"
        android:layout_height="52dp"
        android:background="#0D47A1"
        android:contentDescription="Nhấn để quay trở lại"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="255dp"
        android:layout_height="234dp"
        app:layout_constraintBottom_toTopOf="@+id/title_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.193"
        app:srcCompat="@drawable/frame_1" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="255dp"
        android:layout_height="248dp"
        app:layout_constraintBottom_toTopOf="@+id/title_view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.33"
        app:srcCompat="@drawable/frame_2" />

</androidx.constraintlayout.widget.ConstraintLayout>